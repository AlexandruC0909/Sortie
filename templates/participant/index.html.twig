{% extends 'base.html.twig.' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <h3 class="text-center">
                    {{ participant.pseudo }}
                </h3>
                <br>
                <div class="row">
                    <div class="col-md-6 text-center">
                        <p>Nom:</p>
                        <p>Prenom:</p>
                        <p>Nr Tel:</p>
                        <p>Email:</p>
                        <p>Site:</p>
                        {% if (app.user.id == participant.id) %}
                            <a href="{{ path('participant_updateParticipant',{id:participant.id}) }}">modifier profil</a>
                        {% endif %}

                    </div>
                    <div class="col-md-6 text-center">
                        <p>{{ participant.nom }}</p>
                        <p>{{ participant.prenom }}</p>
                        <p>{{ participant.telephone }}</p>
                        <p>{{ participant.email }}</p>
                        <p>{{ participant.site.nom }}</p>
                        <a href="{{ path('sortie_list',{id:participant.id}) }}">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}