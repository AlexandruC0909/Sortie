{% extends 'base.html.twig.' %}

{% block title %}List{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% if (sorties) %}
                    {% for sortie in sorties %}

                        <div class="card" style="">
                            <div class="card-body">
                                <h5 class="card-title">Organisateur {{ sortie.organizateur.nom }}</h5>
                                <a href="{{ path('sortie_detail', {id: sortie.id}) }}">
                                    <h5 class="card-title">{{ sortie.nom }}</h5>
                                </a>
                                <h6 class="card-subtitle mb-2 text-muted">{{ sortie.infoSortie }}</h6>
                                <p class="card-text">{{ sortie.dateHeureDebut|date('d/m/Y h:i') }}</p>
                                {% if (app.user.id == sortie.organizateur.id) %}
                                <a href="{{ path('sortie_delete', {id: sortie.id}) }}">Suprimer Sortie<a>
                                        {% endif %}
                                        {% if (app.user.id != sortie.organizateur.id) %}
                                        <a href="{{ path('sortie_participer', {id: sortie.id}) }}">participer<a>
                                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
