{% extends 'base.html.twig.' %}

{% block title %}List{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% if (sorties) %}
                    {% for sortie in sorties %}

                        <div class="card" style="">
                            <div class="card-body">
                                <h5 class="card-title">Organisateur {{ sortie.organizateur.nom }}</h5>
                                <a href="{{ path('sortie_detail', {id: sortie.id}) }}">
                                    <h5 class="card-title">{{ sortie.nom }}</h5>
                                </a>
                                <h6 class="card-subtitle mb-2 text-muted">{{ sortie.infoSortie }}</h6>
                                <p class="card-text">{{ sortie.dateHeureDebut|date('d/m/Y h:i') }}</p>
                                <p class="card-text">Site Sortie : {{ sortie.organizateur.site.nom }}</p>
                                <p class="card-text">Lieu : {{ sortie.lieu.nom }}</p>
                                <p class="card-text">rue: {{ sortie.lieu.rue }}</p>
                                <p class="card-text">longitude: {{ sortie.lieu.longitude }}</p>
                                <p class="card-text">Ville: {{ sortie.lieu.ville.nom }}</p>
                                <p class="card-text">codpostal: {{ sortie.lieu.ville.codePostal }}</p>
                                <p class="card-text">Etat: {{ sortie.etat.libelle }}</p>
                                {% if (app.user.id == sortie.organizateur.id and sortie.etat.id == 1) %}
                                <a href="{{ path('sortie_publier', {id: sortie.id}) }}">Publier<a>
                                        {% endif %}
                                        {% if (app.user.id != sortie.organizateur.id and sortie.etat.id == 2 ) %}
                                        <a href="{{ path('sortie_participer', {id: sortie.id}) }}">participer<a>
                                                <a href="{{ path('sortie_desister', {id: sortie.id}) }}">desister<a>
                                                {% endif %}
                                                {% if (app.user.id == sortie.organizateur.id and sortie.etat.id == 2 ) %}
                                                <a href="{{ path('sortie_anuler', {id: sortie.id}) }}">Anuler<a>
                                                        {% endif %}

                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
